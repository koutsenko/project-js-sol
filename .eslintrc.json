{
  "env": {
    "browser": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2, {                    // Табуляция = 2 пробела
      "SwitchCase": 1                           // Сдвиг case в switch на 1 таб
    }],
    "eol-last": "error",                        // Unix-way trailing newlines
    "no-console": "off",                        // Пока разрешаем console.log
    "no-multiple-empty-lines": ["error", {      // Макс. 1 пустая строка подряд
      "max": 1
    }],
    "no-trailing-spaces": "error",              // Необходим trim строк сорцов
    "prefer-arrow-callback": "error",           // ES6 - Arrow-функции в колбэках
    "prefer-const": "error",                    // ES6 - const там где возможно
    "func-names": "error",                      // ES6 - поиск не-arrow ф-ций
    "no-var": "error"                           // ES6 - только const и let
  }
}